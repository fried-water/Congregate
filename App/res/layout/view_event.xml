<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtEvenTitle"
        style="@style/text_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Event Name" />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_going"
            style="@style/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select_going"
            android:text="going" />

        <RadioButton
            android:id="@+id/radio_maybe"
            style="@style/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select_maybe"
            android:text="maybe" />

        <RadioButton
            android:id="@+id/radio_not_going"
            style="@style/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select_not_going"
            android:text="not going" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtEventDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="event description event description" >
    </TextView>

    <TextView
        android:id="@+id/txtTimeLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="event will happen at x at location y" >
    </TextView>

    <TextView
        android:id="@+id/txtmessages"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Messages" >
    </TextView>

    <ScrollView
        android:id="@+id/scrollMessages"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/layoutWallMessages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>