<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventCellInvitation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_invitation_from"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="You are hosting" />

            <TextView
                android:id="@+id/txt_event_name"
                android:textColor="@color/medium_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kick Ass"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt_event_date"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="On December 21 @ 7pm" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:textColor="@color/medium_purple"
                android:id="@+id/txt_event_confirm_count"
                style="@style/text_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="21" />

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="people have confirmed" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/blackLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black" >
    </View>

</LinearLayout>