<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventCellInvitation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_invitation_from"
        style="@style/text_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saman invited you to" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kick Ass"
            android:textSize="24dp" />

        <RadioGroup
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_going"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_select_going"
                android:text="going" />

            <RadioButton
                android:id="@+id/radio_maybe"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_select_maybe"
                android:text="maybe" />

            <RadioButton
                android:id="@+id/radio_not_going"
                style="@style/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_select_not_going"
                android:text="not going" />
        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_event_details"
        style="@style/text_time_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On December 21 @ 7pm at Palm Olive Springs" />

    <View
        android:id="@+id/blackLine"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/black" >
    </View>

</LinearLayout>